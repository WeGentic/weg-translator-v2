{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "weg-translator",
  "version": "0.1.0",
  "identifier": "com.brg.weg-translator",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "weg-translator",
        "width": 800,
        "height": 600,
        "dragDropEnabled": true,
        "resizable": true,
        "visible": false,
        "backgroundColor": "#F9F8EFFF"
      },
      {
        "label": "splashscreen",
        "title": "Weg Translator â€” Loading",
        "width": 420,
        "height": 320,
        "center": true,
        "resizable": false,
        "decorations": false,
        "visible": true,
        "alwaysOnTop": true,
        "dragDropEnabled": false,
        "backgroundColor": "#F9F8EFFF",
        "url": "splashscreen.html"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "sidecars/openxliff/bin/convert.sh",
      "sidecars/openxliff/bin/merge.sh",
      "sidecars/openxliff/bin/xliffchecker.sh",
      "sidecars/openxliff/bin/convert.cmd",
      "sidecars/openxliff/bin/merge.cmd",
      "sidecars/openxliff/bin/xliffchecker.cmd"
    ],
    "resources": [
      "resources/jre",
      "resources/openxliff"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
