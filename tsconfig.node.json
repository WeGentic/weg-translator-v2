{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/core/*": ["./src/core/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/shared/ui/*": ["./src/shared/ui/*"],
      "@/modules/*": ["./src/modules/*"],
      "@/router/*": ["./src/router/*"]
    }
  },
  "include": ["vite.config.ts"]
}
